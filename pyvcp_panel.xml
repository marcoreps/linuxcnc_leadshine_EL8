<pyvcp>
	
	<labelframe text="EL1008">
		<hbox>
		<label>
			<text>"Air OK "</text>
		</label>
		<led>
			<halpin>"air-ok"</halpin>
		</led>
		</hbox>

	</labelframe>
	
    <labelframe text="EL2008">
		<button>
			<halpin>"dout0"</halpin>
			<text>"Relay 1"</text>
		</button>
		<button>
			<halpin>"dout1"</halpin>
			<text>"Relay 2"</text>
		</button>
		<button>
			<halpin>"toolchange"</halpin>
			<text>"Tool change"</text>
		</button>
    </labelframe>
    
    <labelframe text="Servos">
		<label>
            <text>"X Axis Load:"</text>
        </label>
        <bar>
            <halpin>"x-load"</halpin>
            <max_>1000</max_>
        </bar>
        <label>
            <text>"Y Axis Load:"</text>
        </label>
        <bar>
            <halpin>"y-load"</halpin>
            <max_>1000</max_>
        </bar>
        <label>
            <text>"Z Axis Load:"</text>
        </label>
        <bar>
            <halpin>"z-load"</halpin>
            <max_>1000</max_>
        </bar>
    </labelframe>
    
    <labelframe text="Spindle">
		<label>
            <text>"Speed [RPM]:"</text>
        </label>
        <bar>
            <halpin>"spindle-rpm"</halpin>
            <max_>30000</max_>
        </bar>
		<label>
            <text>"Current [A]:"</text>
        </label>
        <bar>
            <halpin>"spindle-current"</halpin>
            <max_>10</max_>
        </bar>
		<label>
            <text>"VFD Temperature [Â°C]:"</text>
        </label>
        <bar>
            <halpin>"vfd-temperature"</halpin>
            <max_>50</max_>
        </bar>
	</labelframe>
    
</pyvcp>
